<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MafiaOnline.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="60"/>
                <Setter Property="WidthRequest" Value="300"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="Margin" Value="0, 0, 0, 0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    
    <StackLayout  Orientation="Vertical" VerticalOptions="Fill" HorizontalOptions="Fill">
        <Image Source="test.png" Aspect="Fill"/>
        <VerticalStackLayout Margin="0, 100, 0, 0">
            <Button x:Name="CreateButton" BackgroundColor="{DynamicResource PrimaryColor}" Text="Create" TextColor="{DynamicResource SecondaryTextColor}" FontSize="20" Style="{StaticResource MenuButtonStyle}"/>
            <Button x:Name="ConnectButton" BackgroundColor="{DynamicResource SecondaryColor}" Text="Connect" TextColor="{DynamicResource SecondaryTextColor}" FontSize="20" Margin="0, 30, 0, 0" Style="{StaticResource MenuButtonStyle}"/>
        </VerticalStackLayout>
    </StackLayout>

</ContentPage>
